{
    "compilerOptions": {
      "incremental": true,
      "noEmit": true,
      "module": "ESNext",
      "strict": true,
      "lib": ["ESNext", "DOM", "DOM.Iterable"],
      "jsx": "preserve",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "moduleResolution": "bundler",
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }